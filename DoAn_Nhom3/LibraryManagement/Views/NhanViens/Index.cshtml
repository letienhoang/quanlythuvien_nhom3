@model IEnumerable<LibraryManagement.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Nhân viên</h2>
    <a asp-action="Create" class="btn btn-success">+ Thêm nhân viên</a>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Mã</th>
        <th>Họ tên</th>
        <th>Chức vụ</th>
        <th>Email</th>
        <th class="text-end">Thao tác</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var nv in Model)
    {
        <tr>
            <td>@nv.MaNhanVien</td>
            <td>@nv.HoTen</td>
            <td>@nv.ChucVu</td>
            <td>@nv.Email</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@nv.Id" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                <a asp-action="Edit" asp-route-id="@nv.Id" class="btn btn-sm btn-outline-secondary ms-1">Sửa</a>
                <a asp-action="Delete" asp-route-id="@nv.Id" class="btn btn-sm btn-outline-danger ms-1">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
