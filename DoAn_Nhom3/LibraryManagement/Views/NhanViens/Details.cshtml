@model LibraryManagement.Models.NhanVien

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết nhân viên</h1>

<div class="card">
    <div class="card-body">
        <h5>@Model.HoTen</h5>

        <dl class="row">
            <dt class="col-sm-3">Mã</dt>
            <dd class="col-sm-9">@Model.MaNhanVien</dd>

            <dt class="col-sm-3">Chức vụ</dt>
            <dd class="col-sm-9">@Model.ChucVu</dd>

            <dt class="col-sm-3">Tài khoản</dt>
            <dd class="col-sm-9">@Model.TaiKhoan</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </div>
</div>