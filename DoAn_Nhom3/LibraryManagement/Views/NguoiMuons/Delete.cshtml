@model LibraryManagement.Models.NguoiMuon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Xóa người mượn: @Model.HoTen</h5>
        <p class="text-body-secondary">Bạn có chắc chắn muốn xóa? Hành động này có thể ảnh hưởng tới các phiếu mượn liên quan.</p>

        <dl class="row">
            <dt class="col-sm-3">Mã</dt>
            <dd class="col-sm-9">@Model.MaNguoiMuon</dd>

            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">CCCD</dt>
            <dd class="col-sm-9">@Model.CCCD</dd>

            <dt class="col-sm-3">Loại</dt>
            <dd class="col-sm-9">@Model.LoaiDocGia</dd>
        </dl>

        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </div>
</div>
