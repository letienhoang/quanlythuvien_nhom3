@using LibraryManagement.Extensions
@model IEnumerable<LibraryManagement.Models.PhieuMuon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách phiếu mượn</h2>
    <a asp-action="Create" class="btn btn-success">+ Tạo phiếu mượn</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Mã</th>
            <th>Người mượn</th>
            <th>Nhân viên</th>
            <th>Ngày mượn</th>
            <th>Hạn trả</th>
            <th>Trạng thái</th>
            <th class="text-end">Thao tác</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaPhieuMuon</td>
                <td>@item.NguoiMuon?.HoTen</td>
                <td>@item.NhanVien?.HoTen</td>
                <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                <td>@item.HanTra.ToString("dd/MM/yyyy")</td>
                <td>@item.TrangThai.GetDisplayName()</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.MaPhieuMuon" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaPhieuMuon" class="btn btn-sm btn-outline-secondary ms-1">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaPhieuMuon" class="btn btn-sm btn-outline-danger ms-1">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
