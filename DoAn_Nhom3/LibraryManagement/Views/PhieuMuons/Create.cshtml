@model LibraryManagement.Models.CreateBorrowRecordDto

@{
    ViewData["Title"] = "Tạo phiếu mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tạo phiếu mượn</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="mb-3">
        <label asp-for="MaPhieuMuon" class="form-label"></label>
        <input asp-for="MaPhieuMuon" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="NguoiMuonId" class="form-label"></label>
        <select asp-for="NguoiMuonId" asp-items="ViewBag.NguoiMuonId" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="NhanVienId" class="form-label"></label>
        <select asp-for="NhanVienId" asp-items="ViewBag.NhanVienId" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="CuonSachId" class="form-label"></label>
        <select asp-for="CuonSachId" asp-items="ViewBag.CuonSachId" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="HanTra" class="form-label"></label>
        <input asp-for="HanTra" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Tạo phiếu mượn</button>
</form>
