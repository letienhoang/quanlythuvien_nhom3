@using LibraryManagement.Extensions
@model LibraryManagement.Models.CreateBorrowRecordDto
@{
    ViewData["Title"] = "Tạo phiếu mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cuonSachCoSan = ViewBag.CuonSachCoSan as List<LibraryManagement.Models.CuonSach> ?? [];
    var soSachDangMuon = ViewBag.SoSachDangMuon as int? ?? 0;
}

<h2>Tạo phiếu mượn</h2>

@if (soSachDangMuon >= 3)
{
    <div class="alert alert-danger">
        Độc giả này đã mượn tối đa 3 cuốn sách và chưa trả. Vui lòng trả bớt sách trước khi tạo phiếu mượn mới.
    </div>
}
else
{
    <form asp-action="Create" method="post">
        <input asp-for="MaPhieuMuon" />
        <div class="mb-3">
            <label asp-for="MaNguoiMuon" class="form-label">Người mượn</label>
            <select asp-for="MaNguoiMuon" asp-items="ViewBag.MaNguoiMuon" class="form-select"
                    onchange="this.form.submit()"></select>
        </div>
        <div class="mb-3">
            <label asp-for="MaNhanVien" class="form-label">Nhân viên lập phiếu</label>
            <select asp-for="MaNhanVien" asp-items="ViewBag.MaNhanVien" class="form-select"></select>
        </div>
        <div class="mb-3">
            <label asp-for="HanTra" class="form-label">Hạn trả</label>
            <input asp-for="HanTra" type="date" class="form-control" />
        </div>

        <!-- Bảng chọn sách giống chi tiết phiếu mượn -->
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Chọn sách mượn (tối đa 3 cuốn)</h5>
            </div>
            <div class="card-body p-0">
                @if (cuonSachCoSan.Any())
                {
                    <div class="table-responsive" style="max-height: 400px;">
                        <table class="table table-hover table-sm" id="bookTable">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th style="width: 40px;">
                                        <input type="checkbox" id="selectAll" class="form-check-input">
                                    </th>
                                    <th>Mã cuốn</th>
                                    <th>Tên sách</th>
                                    <th>Tình trạng</th>
                                    <th>Vị trí</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cuon in cuonSachCoSan)
                                {
                                    <tr class="book-row">
                                        <td>
                                            <input type="checkbox" name="MaCuons" value="@cuon.MaCuon" class="form-check-input book-checkbox" />
                                        </td>
                                        <td><code>@cuon.MaCuon</code></td>
                                        <td>@cuon.Sach?.TenSach</td>
                                        <td>
                                            <span class="badge bg-secondary">@cuon.TinhTrang.GetDisplayName()</span>
                                        </td>
                                        <td>@(cuon.ViTriKe ?? "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-2 text-muted">
                        <small>Đã chọn: <span id="selectedCount">0</span> cuốn sách</small>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> Không có sách nào có sẵn để mượn.
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Tạo phiếu mượn</button>
    </form>

    @section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const selectAll = document.getElementById('selectAll');
                const checkboxes = document.querySelectorAll('.book-checkbox');
                const selectedCount = document.getElementById('selectedCount');
                const maxBooks = 3;

                selectAll?.addEventListener('change', function() {
                    checkboxes.forEach(cb => {
                        cb.checked = this.checked;
                    });
                    updateCount();
                });

                checkboxes.forEach(cb => {
                    cb.addEventListener('change', function(e) {
                        const checkedCount = document.querySelectorAll('.book-checkbox:checked').length;
                        if (checkedCount > maxBooks) {
                            cb.checked = false;
                            alert('Bạn chỉ được mượn tối đa 3 cuốn sách cho mỗi phiếu mượn.');
                        }
                        updateCount();
                    });
                });

                function updateCount() {
                    const count = document.querySelectorAll('.book-checkbox:checked').length;
                    if (selectedCount) selectedCount.textContent = count;
                }
            });
        </script>
    }
}