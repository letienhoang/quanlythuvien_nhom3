@model LibraryManagement.Models.DanhMuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Chi tiết danh mục</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Quay lại</a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.TenDanhMuc</h5>
        <p class="text-muted mb-3">Mã: @Model.MaDanhMuc</p>

        <h6 class="card-subtitle mb-2 text-body-secondary">Mô tả</h6>
        <p class="card-text">@Model.MoTa</p>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </div>
</div>