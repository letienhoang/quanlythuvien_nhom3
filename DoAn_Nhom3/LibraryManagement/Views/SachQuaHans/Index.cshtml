@model List<LibraryManagement.Models.PhieuMuon>
@using LibraryManagement.Services

@inject IFineCalculatorService FineCalculator

@{
    ViewData["Title"] = "Danh sách sách mượn quá hạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách sách mượn quá hạn</h2>
    </div>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Không có sách mượn quá hạn.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã phiếu</th>
                    <th>ID Người mượn</th>
                    <th>Người mượn</th>
                    <th>Ngày mượn</th>
                    <th>Hạn trả</th>
                    <th class="text-danger">Số ngày trễ</th>
                    <th>Số sách</th>
                    <th class="text-danger">Tiền phạt</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var daysOverdue = (DateTime.Now.Date - item.HanTra.Date).Days;
                    var totalFine = FineCalculator.CalculateTotalFine(item);
                    <tr>
                        <td><strong>@item.MaPhieuMuon</strong></td>
                        <td><span>@item.NguoiMuonId</span></td>
                        <td>@item.NguoiMuon?.HoTen</td>
                        <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                        <td><span class="badge bg-danger">@item.HanTra.ToString("dd/MM/yyyy")</span></td>
                        <td><span class="badge bg-warning">@daysOverdue ngày</span></td>
                        <td><span class="badge bg-info">@(item.ChiTietPhieuMuons?.Count ?? 0) cuốn</span></td>
                        <td><span class="badge bg-danger">@totalFine.ToString("N0") VND</span></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}