@model IEnumerable<SachQuaHanReportDto>
@{
    ViewData["Title"] = "Danh sách sách mượn quá hạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Danh sách sách mượn quá hạn</h2>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Không có sách mượn quá hạn.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã phiếu</th>
                    <th>Người mượn</th>
                    <th>Ngày mượn</th>
                    <th>Hạn trả</th>
                    <th class="text-danger">Số ngày trễ</th>
                    <th>Số sách</th>
                    <th class="text-danger">Tiền phạt</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.MaPhieuMuon</strong></td>
                        <td>@item.HoTen</td>
                        <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                        <td><span class="badge bg-danger">@item.HanTra.ToString("dd/MM/yyyy")</span></td>
                        <td><span class="badge bg-warning">@item.TongSoNgayTre ngày</span></td>
                        <td><span class="badge bg-info">@item.SoSachDangMuon cuốn </span></td>
                        <td><span class="badge bg-danger">@item.TongTienPhatChuaTra.ToString("N0") VND</span></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}