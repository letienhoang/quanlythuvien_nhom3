@model LibraryManagement.Models.PhieuMuon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa phiếu mượn</h1>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Xóa: @Model.MaPhieuMuon</h5>
        <p class="text-body-secondary">Bạn có chắc muốn xóa phiếu mượn này? Hành động có thể ảnh hưởng tới các phạt / lịch sử.</p>

        <dl class="row">
            <dt class="col-sm-3">Người mượn</dt>
            <dd class="col-sm-9">@Model.NguoiMuon?.HoTen</dd>

            <dt class="col-sm-3">Ngày mượn</dt>
            <dd class="col-sm-9">@Model.NgayMuon.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Hạn trả</dt>
            <dd class="col-sm-9">@Model.HanTra.ToString("dd/MM/yyyy")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="MaPhieuMuon" />
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>
</div>
