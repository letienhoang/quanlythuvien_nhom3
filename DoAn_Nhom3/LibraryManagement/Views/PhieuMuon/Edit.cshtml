@using LibraryManagement.Extensions
@using LibraryManagement.Enums
@model LibraryManagement.Models.PhieuMuon

@{
    ViewData["Title"] = "Sửa phiếu mượn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@await Html.PartialAsync("_Alerts")

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Sửa phiếu mượn</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
</div>

<!-- Form thông tin phiếu mượn -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Thông tin phiếu mượn</h5>
        <button type="button"
                class="btn btn-warning"
                data-bs-toggle="modal"
                data-bs-target="#renewModal"
                data-mapm="@Model.MaPhieuMuon"
                data-current-hantra="@Model.HanTra.ToString("yyyy-MM-dd")">Gia hạn
        </button>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="MaPhieuMuon" />
            @await Html.PartialAsync("_Form", Model)
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
            </div>
        </form>
    </div>
</div>

<!-- Chi tiết sách mượn - Cập nhật tình trạng trả -->
@if (Model.ChiTietPhieuMuon != null && Model.ChiTietPhieuMuon.Any())
{
    <div class="card">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Cập nhật tình trạng trả sách</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Mã cuốn</th>
                            <th>Tên sách</th>
                            <th>Ngày trả</th>
                            <th>Tình trạng trả</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }
                        @foreach (var ct in Model.ChiTietPhieuMuon)
                        {
                            <tr>
                                <td>@(stt++)</td>
                                <td><code>@ct.CuonSach?.MaCuon</code></td>
                                <td>@ct.CuonSach?.Sach?.TenSach</td>
                                <td>
                                    @if (ct.NgayTra.HasValue)
                                    {
                                        <span class="text-success">@ct.NgayTra.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Chưa trả</span>
                                    }
                                </td>
                                <td>
                                    @if (ct.TinhTrangTra.HasValue)
                                    {
                                        var returnClass = ct.TinhTrangTra switch
                                        {
                                            ReturnCondition.NguyenVen => "badge bg-success",
                                            ReturnCondition.Hong => "badge bg-warning",
                                            ReturnCondition.Mat => "badge bg-danger",
                                            _ => "badge bg-secondary"
                                        };
                                        <span class="@returnClass">@ct.TinhTrangTra.GetDisplayName()</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (!ct.NgayTra.HasValue)
                                    {
                                        <!-- Nút mở modal trả sách -->
                                        <button type="button" class="btn btn-sm btn-success" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#traSachModal"
                                                data-MaCuon="@ct.MaCuon"
                                                data-tensach="@ct.CuonSach?.Sach?.TenSach">
                                                Trả sách
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Đã trả</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Modal Trả Sách -->
<div class="modal fade" id="traSachModal" tabindex="-1" aria-labelledby="traSachModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="traSachModalLabel">
                    <i class="bi bi-check-circle"></i> Xác nhận trả sách
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ReturnBook" method="post">
                <input type="hidden" name="MaPhieuMuon" value="@Model.MaPhieuMuon" />
                <input type="hidden" name="MaCuon" id="modalMaCuon" />
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>Tên sách:</strong> <span id="modalTenSach"></span>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <label for="ngayTra" class="form-label">Ngày trả</label>
                        <input type="date" name="ngayTra" id="ngayTra" class="form-control" 
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="mb-3">
                        <label for="tinhTrangTra" class="form-label">Tình trạng trả</label>
                        <select name="tinhTrangTra" id="tinhTrangTra" class="form-select" required>
                            <option value="">-- Chọn tình trạng --</option>
                            @foreach (var item in Enum.GetValues<ReturnCondition>())
                            {
                                <option value="@((int)item)">@item.GetDisplayName()</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Xác nhận trả
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="renewModal" tabindex="-1" aria-labelledby="renewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Renew" asp-controller="PhieuMuon" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title" id="renewModalLabel">Gia hạn phiếu mượn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="maPhieuMuon" id="renew_maPhieuMuon" value="" />

                    <div class="mb-3">
                        <label class="form-label">Phiếu mượn</label>
                        <div id="renew_displayMaPhieuMuon" class="fw-bold"></div>
                    </div>

                    <div class="mb-3">
                        <label for="renew_soNgay" class="form-label">Số ngày gia hạn</label>
                        <input type="number" min="1" max="365" class="form-control" id="renew_soNgay" name="soNgayGiaHan" value="7" required />
                        <div class="form-text">Nhập số ngày muốn cộng vào hạn trả (ví dụ 7).</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hạn trả hiện tại</label>
                        <div id="renew_currentHanTra" class="text-muted"></div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-warning">Xác nhận gia hạn</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Xử lý modal trả sách
        const traSachModal = document.getElementById('traSachModal');
        traSachModal?.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const MaCuon = button.getAttribute('data-MaCuon');
            const tenSach = button.getAttribute('data-tensach');

            document.getElementById('modalMaCuon').value = MaCuon;
            document.getElementById('modalMaCuon').textContent = MaCuon;
            document.getElementById('modalTenSach').textContent = tenSach;
        });
    </script>
    
    <script>
        (function () {
            var renewModalEl = document.getElementById('renewModal');
            if (!renewModalEl) return;

            renewModalEl.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var mapm = button.getAttribute('data-mapm');
                var currentHanTra = button.getAttribute('data-current-hantra') || '';

                document.getElementById('renew_maPhieuMuon').value = mapm || '';
                document.getElementById('renew_displayMaPhieuMuon').textContent = mapm ? ('#' + mapm) : '-';
                document.getElementById('renew_currentHanTra').textContent = currentHanTra || '-';
                // set default soNgay (7) if empty
                var soNgayInput = document.getElementById('renew_soNgay');
                if (soNgayInput && !soNgayInput.value) soNgayInput.value = 7;
            });

            // client-side basic validation before submit
            document.querySelector('#renewModal form')?.addEventListener('submit', function (e) {
                var soNgay = parseInt(document.getElementById('renew_soNgay')?.value || '0', 10);
                if (isNaN(soNgay) || soNgay <= 0) {
                    e.preventDefault();
                    alert('Vui lòng nhập số ngày gia hạn hợp lệ (> 0).');
                    return false;
                }
                if (soNgay > 365) {
                    if (!confirm('Bạn đang gia hạn quá 365 ngày. Tiếp tục?')) {
                        e.preventDefault();
                        return false;
                    }
                }
                return true;
            });
        })();
    </script>
}

