@model LibraryManagement.ViewModels.PagedResult<LibraryManagement.Models.Sach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách sách</h2>
    <a asp-action="Create" class="btn btn-success">+ Thêm sách</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>ISBN</th>
            <th>Năm</th>
            <th>NXB</th>
            <th>Tác giả</th>
            <th>Số lượng</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.MaSach</td>
                <td>@item.TenSach</td>
                <td>@item.ISBN</td>
                <td>@item.NamXuatBan</td>
                <td>@item.NhaXuatBan</td>
                <td>@item.TacGia?.TenTacGia</td>
                <td>@item.SoLuong</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.MaSach" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaSach" class="btn btn-sm btn-outline-secondary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaSach" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@await Component.InvokeAsync("Pagination", new {
    pageNumber = Model.PageNumber,
    pageSize = Model.PageSize,
    totalItems = Model.TotalItems,
    actionName = "Index"
})
