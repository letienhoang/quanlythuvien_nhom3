@model List<LibraryManagement.Models.PhieuMuon>

@{
    ViewData["Title"] = "Thống kê mượn sách theo tháng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Thống kê mượn sách theo tháng</h2>
</div>

<!-- FORM LỌC -->
<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <select name="thang" class="form-select">
            <option value="">-- Chọn tháng --</option>
            @for (int i = 1; i <= 12; i++)
            {
                <option value="@i" selected="@(ViewBag.Thang == i)">
                    Tháng @i
                </option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="nam" class="form-select">
            <option value="">-- Chọn năm --</option>
            @for (int y = DateTime.Now.Year; y >= 2020; y--)
            {
                <option value="@y" selected="@(ViewBag.Nam == y)">
                    @y
                </option>
            }
        </select>
    </div>

    <div class="col-md-6 d-flex gap-2">
        <button type="submit" class="btn btn-primary">🔍 Thống kê</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Clear</a>
    </div>
</form>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        Không có dữ liệu.
    </div>
}
else
{
    <div class="alert alert-success fw-bold">
        📚 Tổng lượt mượn: @ViewBag.TongLuotMuon |
        📖 Tổng sách mượn: @ViewBag.TongSachMuon
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã phiếu</th>
                    <th>ID Người mượn</th>
                    <th>Người mượn</th>
                    <th>Ngày mượn</th>
                    <th>Hạn trả</th>
                    <th>Số sách</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.MaPhieuMuon</strong></td>
                        <td>@item.MaNguoiMuon</td>
                        <td>@item.NguoiMuon?.HoTen</td>
                        <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                        <td>@item.HanTra.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge bg-info">
                                @(item.ChiTietPhieuMuons?.Count ?? 0) cuốn
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-secondary">
                                @item.TrangThai
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
