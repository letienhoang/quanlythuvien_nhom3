@model List<LibraryManagement.Models.PhieuMuon>
@using LibraryManagement.Services

@inject IFineCalculatorService FineCalculator

@{
    ViewData["Title"] = "Thống kê mượn theo tháng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">📊 Thống kê mượn sách theo tháng</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label>Tháng</label>
        <input type="number" name="thang" class="form-control"
               min="1" max="12" value="@ViewBag.Thang" />
    </div>

    <div class="col-md-3">
        <label>Năm</label>
        <input type="number" name="nam" class="form-control"
               value="@ViewBag.Nam" />
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary">Thống kê</button>
    </div>
</form>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        Không có phiếu mượn trong tháng này.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã phiếu</th>
                    <th>Người mượn</th>
                    <th>Ngày mượn</th>
                    <th>Hạn trả</th>
                    <th>Số sách</th>
                    <th>Tiền phạt (nếu có)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var totalFine = FineCalculator.CalculateTotalFine(item);

                    <tr>
                        <td><strong>@item.MaPhieuMuon</strong></td>
                        <td>@item.NguoiMuon?.HoTen</td>
                        <td>@item.NgayMuon.ToString("dd/MM/yyyy")</td>
                        <td>@item.HanTra.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge bg-info">
                                @(item.ChiTietPhieuMuons?.Count ?? 0) cuốn
                            </span>
                        </td>
                        <td>
                            @if (totalFine > 0)
                            {
                                <span class="badge bg-danger">
                                    @totalFine.ToString("N0") VND
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">0</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="PhieuMuon"
                               asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary">
                                Chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
