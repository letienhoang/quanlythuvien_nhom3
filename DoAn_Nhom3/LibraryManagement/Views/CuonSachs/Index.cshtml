@model IEnumerable<LibraryManagement.Models.CuonSach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách cuốn sách</h2>
    <a asp-action="Create" class="btn btn-success">+ Thêm cuốn</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Mã cuốn</th>
            <th>Sách</th>
            <th>Tình trạng</th>
            <th>Trạng thái</th>
            <th>Vị trí kệ</th>
            <th>Ngày nhập</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaCuon</td>
                <td>@item.Sach?.TenSach</td>
                <td>@item.TinhTrang</td>
                <td>@item.TrangThai</td>
                <td>@item.ViTriKe</td>
                <td>@(item.NgayNhap?.ToString("yyyy-MM-dd") ?? "")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
