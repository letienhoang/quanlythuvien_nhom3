                <a asp-action="Edit" asp-route-id="@item.MaCuon">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaCuon">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaCuon">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
