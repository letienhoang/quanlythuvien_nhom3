@using LibraryManagement.Enums
@model LibraryManagement.Models.CuonSach

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="row g-3">

    <div class="col-md-4">
        <label asp-for="MaSach" class="form-label"></label>
        <select asp-for="MaSach" asp-items="@(ViewBag.MaSach as SelectList)" class="form-select">
            <option value="">-- Chọn sách --</option>
        </select>
        <span asp-validation-for="MaSach" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="TinhTrang" class="form-label"></label>
        <select asp-for="TinhTrang" asp-items="@(Html.GetEnumSelectList<BookCondition>())" class="form-select"></select>
        <span asp-validation-for="TinhTrang" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="TrangThai" class="form-label"></label>
        <select asp-for="TrangThai" asp-items="@(Html.GetEnumSelectList<CopyStatus>())" class="form-select"></select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="ViTriKe" class="form-label"></label>
        <input asp-for="ViTriKe" class="form-control" />
        <span asp-validation-for="ViTriKe" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="NgayNhap" class="form-label"></label>
        <input asp-for="NgayNhap" class="form-control" type="date" />
        <span asp-validation-for="NgayNhap" class="text-danger"></span>
    </div>
</div>