@model LibraryManagement.Models.CuonSach

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Chi tiết cuốn sách</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.MaCuon" class="btn btn-sm btn-outline-secondary">Sửa</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Quay lại</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã cuốn</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.MaCuon)</dd>

            <dt class="col-sm-3">Sách</dt>
            <dd class="col-sm-9">@Model?.Sach?.TenSach</dd>

            <dt class="col-sm-3">Tình trạng</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.TinhTrang)</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.TrangThai)</dd>

            <dt class="col-sm-3">Vị trí kệ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.ViTriKe)</dd>

            <dt class="col-sm-3">Ngày nhập</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.NgayNhap)</dd>
        </dl>
    </div>
</div>
