@model LibraryManagement.Models.TacGia

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.TenTacGia</h5>
        <p class="text-muted mb-3">
            @if (Model.NgaySinh != null)
            {
                <span>Ngày sinh: @Model.NgaySinh.Value.ToString("dd/MM/yyyy")</span>
                <span class="mx-2">|</span>
            }
            <span>Quốc tịch: @Model.QuocTich</span>
        </p>

        <h6 class="card-subtitle mb-2 text-body-secondary">Mô tả</h6>
        <p class="card-text">@Model.MoTa</p>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </div>
</div>
