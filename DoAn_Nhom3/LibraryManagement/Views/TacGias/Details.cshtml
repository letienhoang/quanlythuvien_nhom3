@model LibraryManagement.Models.TacGia

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Chi tiết sách</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.MaTacGia" class="btn btn-sm btn-outline-secondary">Sửa</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Quay lại</a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.TenTacGia</h5>
        <p class="text-muted mb-3">
            @if (Model.NgaySinh != null)
            {
                <span>Ngày sinh: @Model.NgaySinh.Value.ToString("dd/MM/yyyy")</span>
                <span class="mx-2">|</span>
            }
            <span>Quốc tịch: @Model.QuocTich</span>
        </p>

        <h6 class="card-subtitle mb-2 text-body-secondary">Mô tả</h6>
        <p class="card-text">@Model.MoTa</p>
    </div>
</div>
