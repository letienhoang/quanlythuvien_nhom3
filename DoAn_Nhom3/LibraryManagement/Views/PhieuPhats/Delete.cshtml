@model LibraryManagement.Models.PhieuPhat

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Xóa phiếu phạt: @Model.MaPhat</h5>
        <p class="text-body-secondary">Bạn có chắc chắn muốn xóa phiếu phạt này?</p>

        <dl class="row">
            <dt class="col-sm-3">Phiếu mượn</dt>
            <dd class="col-sm-9">@Model.PhieuMuon?.MaPhieuMuon - @Model.PhieuMuon?.NguoiMuon?.HoTen</dd>

            <dt class="col-sm-3">Số tiền</dt>
            <dd class="col-sm-9">@Model.SoTienPhat.ToString("N2")</dd>

            <dt class="col-sm-3">Lý do</dt>
            <dd class="col-sm-9">@Model.LyDo</dd>

            <dt class="col-sm-3">Trạng thái thanh toán</dt>
            <dd class="col-sm-9">@Model.TrangThaiThanhToan</dd>
        </dl>

        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
    </div>
</div>
