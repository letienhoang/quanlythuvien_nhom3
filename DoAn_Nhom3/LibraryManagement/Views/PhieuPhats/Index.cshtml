@using LibraryManagement.Extensions
@model IEnumerable<LibraryManagement.Models.PhieuPhat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("_Alerts")

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách phiếu phạt</h2>
    <div>
        <form asp-action="UpdateUnpaidFines" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Cập nhật tiền phạt</button>
        </form>
        <a asp-action="Create" class="btn btn-success">+ Tạo phiếu phạt</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Mã</th>
            <th>Phiếu mượn</th>
            <th>Người mượn</th>
            <th>Số tiền</th>
            <th>Trạng thái thanh toán</th>
            <th class="text-end">Thao tác</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaPhat</td>
                <td>@item.PhieuMuon?.MaPhieuMuon</td>
                <td>@item.PhieuMuon?.NguoiMuon?.HoTen</td>
                <td>@item.SoTienPhat.ToString("N2")</td>
                <td>@item.TrangThaiThanhToan.GetDisplayName()</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.MaPhat" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaPhat" class="btn btn-sm btn-outline-secondary ms-1">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaPhat" class="btn btn-sm btn-outline-danger ms-1">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
