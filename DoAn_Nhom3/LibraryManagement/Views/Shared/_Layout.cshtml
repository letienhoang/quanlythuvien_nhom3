<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý thư viện</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LibraryManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @await Html.PartialAsync("_ColorSection")
    @await Html.PartialAsync("_Header")

    <div class="container-fluid">
        <div class="row">
            @await Html.PartialAsync("_Sidebar")
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-5">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted px-5">
        © @DateTime.Now.Year - Nhóm 3
    </footer>

    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/color-modes.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/Chart.js/chart.umd.js" asp-append-version="true"></script>

    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
