@model IEnumerable<LibraryManagement.Models.NguoiMuon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách người mượn</h2>
    <a asp-action="Create" class="btn btn-success">+ Thêm người mượn</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>CCCD</th>
            <th>Loại</th>
            <th>Ngày đăng ký</th>
            <th>Ngày hết hạn</th>
            <th class="text-end">Thao tác</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNguoiMuon</td>
                <td>@item.HoTen</td>
                <td>@item.CCCD</td>
                <td>@item.LoaiDocGia</td>
                <td>@item.NgayDangKy.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayHetHan.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.MaNguoiMuon" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaNguoiMuon" class="btn btn-sm btn-outline-secondary ms-1">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaNguoiMuon" class="btn btn-sm btn-outline-danger ms-1">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
