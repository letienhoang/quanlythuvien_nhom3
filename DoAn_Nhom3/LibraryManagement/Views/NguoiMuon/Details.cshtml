@model LibraryManagement.Models.NguoiMuon

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Thông tin người mượn</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.MaNguoiMuon" class="btn btn-sm btn-outline-secondary">Sửa</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Quay lại</a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.HoTen</h5>
        <p class="text-muted mb-3">Mã: @Model.MaNguoiMuon</p>

        <dl class="row">
            <dt class="col-sm-3">Ngày sinh</dt>
            <dd class="col-sm-9">@Model.NgaySinh?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">CCCD</dt>
            <dd class="col-sm-9">@Model.CCCD</dd>

            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Model.DiaChi</dd>

            <dt class="col-sm-3">SĐT</dt>
            <dd class="col-sm-9">@Model.SoDienThoai</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Loại độc giả</dt>
            <dd class="col-sm-9">@Model.LoaiDocGia</dd>

            <dt class="col-sm-3">Ngày đăng ký</dt>
            <dd class="col-sm-9">@Model.NgayDangKy.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Ngày hết hạn</dt>
            <dd class="col-sm-9">@Model.NgayHetHan.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@Model.TrangThai</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.MaNguoiMuon" class="btn btn-primary">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </div>
</div>
