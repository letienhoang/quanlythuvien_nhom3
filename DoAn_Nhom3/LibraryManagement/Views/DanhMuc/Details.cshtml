@model LibraryManagement.ViewModels.DanhMucDetailsViewModel

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Chi tiết danh mục</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.DanhMuc.MaDanhMuc" class="btn btn-sm btn-outline-secondary">Sửa</a>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Quay lại</a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.DanhMuc.TenDanhMuc</h5>
        <p class="text-muted mb-3">Mã: @Model.DanhMuc.MaDanhMuc</p>

        <h6 class="card-subtitle mb-2 text-body-secondary">Mô tả</h6>
        <p class="card-text">@Model.DanhMuc.MoTa</p>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Sách thuộc danh mục</h5>
            <small class="text-muted">@Model.Books.Count() sách</small>
        </div>

        @if (Model.Books == null || !Model.Books.Any())
        {
            <div class="alert alert-info">Chưa có sách nào thuộc danh mục này.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã</th>
                            <th>Tên sách</th>
                            <th>ISBN</th>
                            <th>Tác giả</th>
                            <th class="text-end">Tổng</th>
                            <th class="text-end">Có sẵn</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in Model.Books)
                        {
                            <tr>
                                <td>@b.MaSach</td>
                                <td>@b.TenSach</td>
                                <td>@b.ISBN</td>
                                <td>@b.TacGia</td>
                                <td class="text-end">@b.SoLuong</td>
                                <td class="text-end">@b.AvailableCopies</td>
                                <td class="text-end">
                                    <a asp-controller="Sach" asp-action="Details" asp-route-id="@b.MaSach" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                                    <a asp-controller="Sach" asp-action="Edit" asp-route-id="@b.MaSach" class="btn btn-sm btn-outline-secondary ms-1">Sửa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
