@model List<LibraryManagement.Models.PhieuMuon>
@using LibraryManagement.Services

@inject IFineCalculatorService FineCalculator

@{
    ViewData["Title"] = "Thống kê tiền phạt theo tháng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-danger">💰 Thống kê tiền phạt theo tháng</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <label>Tháng</label>
        <input type="number" name="thang" class="form-control"
               min="1" max="12" value="@ViewBag.Thang" />
    </div>

    <div class="col-md-3">
        <label>Năm</label>
        <input type="number" name="nam" class="form-control"
               value="@ViewBag.Nam" />
    </div>

    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-danger">Thống kê</button>
    </div>
</form>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        Không có tiền phạt trong tháng này.
    </div>
}
else
{
    <div class="alert alert-danger fw-bold">
        👉 Tổng tiền phạt tháng @ViewBag.Thang/@ViewBag.Nam:
        <span class="fs-5">
            @ViewBag.TongTienPhat.ToString("N0") VND
        </span>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã phiếu</th>
                    <th>Người mượn</th>
                    <th>Hạn trả</th>
                    <th>Số ngày trễ</th>
                    <th>Số sách</th>
                    <th class="text-danger">Tiền phạt</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var daysOverdue = (DateTime.Now.Date - item.HanTra.Date).Days;
                    var fine = FineCalculator.CalculateTotalFine(item);

                    <tr>
                        <td>@item.MaPhieuMuon</td>
                        <td>@item.NguoiMuon?.HoTen</td>
                        <td>
                            <span class="badge bg-danger">
                                @item.HanTra.ToString("dd/MM/yyyy")
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-warning">
                                @daysOverdue ngày
                            </span>
                        </td>
                        <td>
                            @(item.ChiTietPhieuMuons?.Count ?? 0)
                        </td>
                        <td>
                            <span class="badge bg-danger">
                                @fine.ToString("N0") VND
                            </span>
                        </td>
                        <td>
                            <a asp-controller="PhieuMuon"
                               asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary">
                                Chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
